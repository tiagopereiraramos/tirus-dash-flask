# UV Configuration for Tirus Dash Flask
# This file configures the virtual environment and dependencies

[project]
# Python version to use
python = "3.11"

# Virtual environment location
venv = ".venv"

# Development dependencies
dev-dependencies = [
    "pytest>=7.4.0,<8.0.0",
    "pytest-flask>=1.3.0,<2.0.0",
    "pytest-cov>=4.1.0,<5.0.0",
    "black>=23.9.0,<24.0.0",
    "isort>=5.12.0,<6.0.0",
    "flake8>=6.1.0,<7.0.0",
    "mypy>=1.6.0,<2.0.0",
    "pre-commit>=3.5.0,<4.0.0",
    "ipython>=8.16.0,<9.0.0",
    "ipdb>=0.13.0,<1.0.0",
    "ruff>=0.0.290,<1.0.0",
]

# Optional feature groups
[project.optional-dependencies]
rpa = [
    "selenium>=4.15.0,<5.0.0",
    "webdriver-manager>=4.0.0,<5.0.0",
    "beautifulsoup4>=4.12.0,<5.0.0",
    "requests>=2.31.0,<3.0.0",
    "lxml>=4.9.0,<5.0.0",
    "pillow>=10.0.0,<11.0.0",
    "opencv-python>=4.8.0,<5.0.0",
]

notifications = [
    "evolution-api>=1.0.0,<2.0.0",
    "slack-sdk>=3.21.0,<4.0.0",
    "python-telegram-bot>=20.6.0,<21.0.0",
    "emails>=0.6.0,<1.0.0",
]

storage = [
    "boto3>=1.34.0,<2.0.0",
    "minio>=7.1.0,<8.0.0",
]

# Environment variables
[env]
FLASK_ENV = "development"
DEBUG = "True"
FLASK_DEBUG = "1"
PYTHONPATH = "." 